doctype html
html
  head
    title Contact - Weather
    link(rel='stylesheet', href='style.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    script(src='https://kit.fontawesome.com/a076d05399.js')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        .navbar-brand
          a.logo(href='/') Weather Forecast
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/Forecast') Forecast
            li.nav-item
              a.nav-link(href='/Articles') Articles
            li.nav-item
              a.nav-link(href='/AboutUs') About Us
            li.nav-item
              a.nav-link(href='/contact') Contact
          .search-box.navbar-nav
            form.form-inline.my-2.my-lg-0
              input.form-control(type='text', placeholder='Search')
              button.btn.btn-outline-light(type='submit')
                i.fa.fa-search

    main.container.content
      .jumbotron.jumbotron-fluid.bg-primary.text-white.py-4
        .container.text-center
          h1.display-4 Contact Us

      .container.mt-4
        .row
          .col-md-4
            form
              .form-group
                label(for='name') Your Name
                input#name.form-control(type='text', placeholder='Enter your name')
              .form-group
                label(for='email') Email Address
                input#email.form-control(type='email', placeholder='Enter your email address')
              .form-group
                label(for='message') Message
                textarea#message.form-control(rows='5', placeholder='Enter your message')
              button.btn.btn-primary(type='submit') Send Message

    footer.footer.bg-dark.text-white.py-3.text-center
